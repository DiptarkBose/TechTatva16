<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardElevation="1.5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/background_holo_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/on_select_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_weight="0"
            android:id="@+id/result_logo_image_view"
            android:layout_width="@dimen/std_icon_size"
            android:layout_height="@dimen/std_icon_size"
            android:src="@drawable/tt_acumen"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/result_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:fontFamily="sans-serif-condensed"
            tools:text="Result Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/typography_title" />

        <ImageView
            android:layout_weight="0"
            android:id="@+id/result_plus_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"
            android:alpha="0.54"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>