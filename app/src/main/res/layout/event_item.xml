<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardElevation="1.5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/on_select_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/event_logo_image_view"
            android:layout_width="@dimen/std_icon_size"
            android:layout_height="@dimen/std_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/acumen" />

        <TextView
            android:id="@+id/event_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_logo_image_view"
            android:layout_toEndOf="@+id/event_logo_image_view"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            tools:text="Event Name"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/favorite_image_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_fav"
            android:tint="@color/grey"
            android:background="@drawable/on_fav_select"
            android:tag="Deselected"/>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/event_description_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_color" />

           <android.support.design.widget.TabLayout
               android:id="@+id/events_tab_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:tabGravity="fill"
               style="@style/EventsTabLayout"
               app:tabMode="fixed"
               android:background="@color/white" />

            <in.techtatva.techtatva.adapters.EventFragmentCustomPager
                android:id="@+id/event_view_pager"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/white" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>