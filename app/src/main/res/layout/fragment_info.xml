<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_location"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventLocation"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_time"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventTime"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_date"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/maxSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventDate"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_participants"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_participants"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/eventContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxSize"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_contact"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_contact"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:textColor="@color/black" />



</RelativeLayout>