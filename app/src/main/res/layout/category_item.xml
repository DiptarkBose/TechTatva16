<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardElevation="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">


        <ImageView
            android:id="@+id/category_logo_image_view"
            android:layout_width="@dimen/std_icon_size"
            android:layout_height="@dimen/std_icon_size"
            android:layout_margin="5dp"
            android:src="@drawable/acumen" />

        <TextView
            android:id="@+id/category_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/category_logo_image_view"
            android:layout_toEndOf="@id/category_logo_image_view"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start|center_vertical"
            tools:text="Category Name"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageButton
            android:layout_width="@dimen/std_icon_size"
            android:layout_height="@dimen/std_icon_size"
            android:id="@+id/category_info_imagebutton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/on_fav_select"
            android:src="@drawable/category_info"
            android:tint="@color/color_primary"
            android:tag="Deselected"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>