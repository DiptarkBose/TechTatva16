<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_design"
android:orientation="vertical">

    <include layout="@layout/app_bar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/trending_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="1.5dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/trending_1_image_view"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:src="@drawable/acumen" />

                <ImageView
                    android:id="@+id/first_image_view"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|left|start"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_trending_star"
                    android:tint="@color/gold"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_gravity="center">

                <TextView
                    android:id="@+id/trending_1__text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start|center_vertical"
                    android:text="Trending Category 1"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/trending_1__text_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:text="1000 people interested."
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/trending_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="1.5dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/trending_2_image_view"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:src="@drawable/acumen" />


                <ImageView
                    android:id="@+id/second_image_view"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|left|start"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_trending_star"
                    android:tint="@color/silver"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/trending_2__text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start|center_vertical"
                    android:text="Trending Category 2"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/trending_2__text_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:text="1000 people interested."
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/trending_card_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="1.5dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/trending_3_image_view"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="1dp"
                    android:padding="4dp"
                    android:src="@drawable/acumen" />


                <ImageView
                    android:id="@+id/three_image_view"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|left|start"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_trending_star"
                    android:tint="@color/brown"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/trending_3__text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start|center_vertical"
                    android:text="Trending Category 3"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/trending_3__text_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:text="1000 people interested."
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
